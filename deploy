apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: claim-v2
  labels:
    version: v2
spec:
  replicas: 1
  template:
    metadata:
      annotations:
        sidecar.istio.io/inject: "true"
      labels:
        app: claim
        version: v2
    spec:
      containers:
      - name: claim
        image: registry.cn-shanghai.aliyuncs.com/casecloud/claim:v2.3.5
        imagePullPolicy: Always
        ports:
        - containerPort: 8080
        env:
        - name: aliyun_logs_claimv2
          value: "stdout"                                                                                                                                    
      imagePullSecrets:
      - name: regcred
